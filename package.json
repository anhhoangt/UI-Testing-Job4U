{
  "name": "ui-testing-job4u",
  "version": "1.0.0",
  "description": "UI Testing project using Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:ci": "npx playwright test --project=chromium --reporter=html,junit",
    "test:ci:all": "npx playwright test --reporter=html,junit",
    "test:headed": "npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
